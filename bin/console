#!/usr/bin/env python
import code

from parole import models
from parole.app import app


def main():
    print('Connecting to database...')
    models.connect_db(app.config['DATABASE_URL'])

    print('Bringing up Parole console...')
    console = code.InteractiveConsole({'app': app, 'models': models})
    console.interact()


if __name__ == '__main__':
    main()